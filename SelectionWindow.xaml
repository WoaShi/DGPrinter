<Window x:Class="DGPrinter.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Area" WindowState="Maximized" WindowStyle="None"
        Topmost="True" AllowsTransparency="True" Background="#01FFFFFF"
        Cursor="Cross" MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseUp="Window_MouseUp">
    <Canvas>
        <!-- 必须有 x:Name="SelRect" -->
        <Rectangle x:Name="SelRect" Stroke="Red" StrokeThickness="2" Fill="#33FF0000" Visibility="Collapsed"/>
    </Canvas>
</Window>